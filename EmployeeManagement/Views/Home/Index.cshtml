@model IEnumerable<Employee>

@{ 
    //Layout = "../Shared/_Layout.cshtml";because we used View Start which will take care of our layout/
    ViewBag.Title = "Employee List";
}



        <table>
            <thead>
                <tr>
                    <th>ID</th>

                    <th>Name</th>

                    <th>Department</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var employee in Model)
                {
                <tr>
                    <td>@employee.Id</td>

                    <td>@employee.Name</td>

                    <td>@employee.Department</td>
                </tr>
                }
            </tbody>
        </table>
