@model IEnumerable<Employee>

@{ 
    //Layout = "../Shared/_Layout.cshtml";because we used View Start which will take care of our layout/
    ViewBag.Title = "Employee List";
}


<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "22.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>

        <img class="card-img-top imageThumbnail" src ="@photoPath"  asp-append-version="true"/>

        <div class="card-footer text-center">
            @* This bascially is an achor tag helper and beautifies the achor tag helper format like
                asp-controller , asp-action , asp-route-values*@

            <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
               class="btn btn-primary m-1">View</a>

            @*<a href ="@Url.Action("details" , "home" , new { id = employee.Id})"
               class="btn btn-primary">Show</a>



            @Html.ActionLink("View From Helper", "details", "home" , new { id = employee.Id})
            <a href="/home/details/@employee.Id" class="btn btn-primary">View</a>*@


            <a href="#" class="btn btn-primary m-1">Edit</a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
            </div>
    }
</div>
















