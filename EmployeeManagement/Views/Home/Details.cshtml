@model HomeDetailsViewModel

@{
    //Layout = "../Shared/_Layout.cshtml"; because we used View Start which will take care of our layout.
    ViewBag.Title = "Employee List Details";
}

<h1>@Model.PageTitle</h1>


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">

                <img class="card-img-top" src="~/images/22.jpg" />

                <h4>Employee Id: @Model.Employee.Id</h4>

                <h4>Department: @Model.Employee.Department</h4>

                <h4>Email: @Model.Employee.Email</h4>

            </div>

            <div class="card-footer text-center">
                 <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>

                 <a href="#" class="btn btn-primary">Edit</a>

                 <a href="#" class="btn btn-danger">Delete</a>
        </div>

    </div>

</div> 
    </div>










